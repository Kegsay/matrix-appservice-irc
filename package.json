{
  "name": "matrix-appservice-irc",
  "version": "0.12.0",
  "description": "An IRC Bridge for Matrix",
  "main": "app.js",
  "bin": "./bin/matrix-appservice-irc",
  "engines": {
    "node": ">=6.9"
  },
  "scripts": {
    "build": "tsc && cp ./src/config/schema.yml ./lib/config/schema.yml",
    "test": "BLUEBIRD_DEBUG=1 node --max_old_space_size=3072 node_modules/jasmine/bin/jasmine.js --stop-on-failure=true",
    "lint": "eslint --max-warnings 0 lib spec",
    "check": "npm test && npm run lint",
    "ci-test": "node --max_old_space_size=3072 node_modules/nyc/bin/nyc.js --report text jasmine",
    "ci": "npm run lint && npm run ci-test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/matrix-org/matrix-appservice-irc.git"
  },
  "author": "",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/matrix-org/matrix-appservice-irc/issues"
  },
  "dependencies": {
    "@types/bluebird": "^3.5.27",
    "@types/node": "^10.14.9",
    "bluebird": "^3.5.5",
    "crc": "^3.2.1",
    "escape-string-regexp": "^1.0.5",
    "extend": "^2.0.0",
    "he": "^1.1.1",
    "irc": "matrix-org/node-irc#c9abb427bec5016d94a2abf3e058cc62de09ea5a",
    "js-yaml": "^3.2.7",
    "matrix-appservice-bridge": "matrix-org/matrix-appservice-bridge#cab087b26447dc66ad7b93bbfc348470d41e5e86",
    "matrix-lastactive": "^0.0.8",
    "nedb": "^1.1.2",
    "nopt": "^3.0.1",
    "prom-client": "^6.3.0",
    "request": "^2.54.0",
    "sanitize-html": "^1.6.1",
    "typescript": "^3.5.1",
    "winston": "^2.4.2",
    "winston-daily-rotate-file": "^3.2.1"
  },
  "devDependencies": {
    "jasmine": "^3.1.0",
    "nyc": "^12.0.2",
    "eslint": "^5.16.0",
    "proxyquire": "^1.4.0"
  }
}
